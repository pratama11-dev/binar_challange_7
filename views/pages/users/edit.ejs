<h3 class="mb-3"><%= pageTitle %></h3>

<form method="post" action="/gameusers/<%= gameuser.id %>?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Nama User</label>
    <input
      type="text"
      class="form-control"
      name="name"
      id="name"
      value="<%= gameuser.name %>"
      required
    />
  </div>
  <div class="mb-3">
    <label for="tempat_lahir" class="form-label">Tempat Lahir</label>

    <input
      type="text"
      class="form-control"
      id="tempat_lahir"
      name="tempat_lahir"
      value="<%= gameuser.placeOfBirth%>"
      required
    />
  </div>
  <div class="mb-3">
    <label for="tanggal_lahir" class="form-label">Tanggal Lahir</label>
    <input
      type="date"
      class="form-control"
      id="tanggal_lahir"
      name="tanggal_lahir"
      value="<%= gameuser.dateOfBirth %>"
      required
    />
  </div>
  <div class="mb-3">
    <label for="alamat" class="form-label">Alamat</label>
    <textarea
      type="text"
      class="form-control"
      id="alamat"
      name="alamat"
      min="0"
      value="<%= gameuser.address %>"
      required
    ></textarea>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      value="<%= gameuser.email %>"
      required
    />
  </div>

  <div class="mb-3">
    <label for="no_telepon" class="form-label">Nomor Telepon</label>
    <input
      type="tel"
      class="form-control"
      id="no_telepon"
      name="no_telepon"
      min="0"
      value="<%= gameuser.phoneNumber %>"
      required
    />
  </div>

  <div class="row">
    <div class="col-auto">
      <button type="button" onclick="history.back()" class="btn btn-danger">
        Batal
      </button>
    </div>

    <div class="col-auto">
      <button type="reset" class="btn btn-secondary">Reset</button>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
