<div>
  <h3>Welcome : <br /><%= name %></h3>
  <div class="table-responsive mt-3">
    <table class="table table-border table-hover">
      <thead>
        <tr style="text-align: center">
          <th scope="col">No</th>
          <th scope="col">Code Room</th>
          <th scope="col">Name Room</th>
          <th scope="col">Create At</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
       <tbody>
        <% room.forEach((data, index)=> { %>
          <tr style="text-align: center;">
            <th scope="row"><%= index + 1 %></th>
            <td class="w-10"><%= data.id %></td>
            <td><%= data.name_room %></td>
            <td><%= data.createdAt %></td>
            <td><a class="btn btn-success btn-sm" href="/arena/<%= data.id %>">Join</button></td>
          </tr> 
        <% }) %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-evenly">
    <button
      type="button"
      class="btn btn-primary btn-lg"
      data-bs-toggle="modal"
      data-bs-target="#ModalCreate"
      data-bs-whatever="@mdo"
    >
      Create Room
    </button>
    <button
      type="button"
      class="btn btn-secondary btn-lg"
      data-bs-toggle="modal"
      data-bs-target="#ModalJoin"
      data-bs-whatever="@fat"
    >
      Join Room
    </button>
    <div
      class="modal fade"
      id="ModalCreate"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create Room Game</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form method="post" action="/dashboard">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label"
                  >Input Room Name</label
                >
                <input
                  type="text"
                  name="room_name"
                  class="form-control"
                  id="recipient-name"
                />
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">Create</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="ModalJoin"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Join Game</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form method="POST" action="/arena/join">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label"
                  >Input Code Room</label
                >
                <input
                  type="text"
                  name="room_id"
                  class="form-control"
                  id="recipient-name"
                />
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">Join</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
